<div class="m-5">
  <div>
    <% if @link.errors.any? %>
      <% @link.errors.full_messages.each do |message| %>
      <div class="block ml-10">
        <li><%= message %></li>
      </div>
      <% end %>
    <% end %>
  </div>
  <%= form_for @link do |form| %>
    URL:       <%= form.text_field :url %>
    Customize: <%= form.text_field :slug %>
    <button>   <%= form.submit %>  </button>
  <% end %>
</div>
<h2 class="ml-5">Your Link</h2>
<div class="m-5 bg-blue-200 w-2/6">
  <div>
    <% @links.each do |links| %>
      <div class="p-5 border-b-2">
        <span class="block"><%= links.created_at.strftime("%Y-%m-%d") %></span>
        <span><%= links.shortened_url %></span>
        <button class="block border-2 border-slate-500"><%= link_to 'delete', link_path(links), method: 'delete', data:{confirm: 'Are you sure?'} %></button>
      </div> 
    <% end %>
  </div>
</div>

